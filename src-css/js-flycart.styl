.flycart-animated-add
  position:absolute
  border:1px dotted red

.flycart-animated-remove
  position:absolute
  border:1px dotted red

.flycart-target
  display: inline-block
  background: #2EAE9B
  color: #afe1da
  padding: 5px 15px 6px 15px
  &:hover
    color: #FFF

.flycart-source
  display: inline-block
  background: #f9a30c
  color: #fadca7
  padding: 5px 15px 6px 15px
  cursor: pointer
  &:hover
    color: #FFF

